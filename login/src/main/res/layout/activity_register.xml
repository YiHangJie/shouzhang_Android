<?xml version="1.0" encoding = "utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/rgbg"
    android:id="@+id/loginlayout"
    android:fitsSystemWindows="true">

    <EditText
        android:id="@+id/account"
        android:layout_width="330dp"
        android:layout_height="46dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="160dp"
        android:background="@mipmap/rectangle"
        android:drawableStart="@mipmap/forma1"
        android:drawablePadding="15dp"
        android:hint="请输入用户名"
        android:singleLine="true"
        android:textColorHint="#a1b7c2"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/Email"
        android:layout_width="330dp"
        android:layout_height="46dp"
        android:layout_below="@+id/account"
        android:layout_alignStart="@+id/account"
        android:layout_marginTop="25dp"
        android:background="@mipmap/rectangle"
        android:drawableLeft="@mipmap/forma2"
        android:drawablePadding="15dp"
        android:hint="请输入邮箱"
        android:singleLine="true"
        android:textColorHint="#a1b7c2"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/password"
        android:layout_width="330dp"
        android:layout_height="46dp"
        android:layout_below="@+id/Email"
        android:layout_alignStart="@+id/account"
        android:layout_marginTop="25dp"
        android:background="@mipmap/rectangle"
        android:drawableLeft="@mipmap/forma3"
        android:drawablePadding="15dp"
        android:hint="请输入密码"
        android:password="true"
        android:singleLine="true"
        android:textColorHint="#a1b7c2"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/passwordconfirm"
        android:layout_width="330dp"
        android:layout_height="46dp"
        android:layout_below="@+id/password"
        android:layout_alignStart="@+id/account"
        android:layout_marginTop="25dp"
        android:background="@mipmap/rectangle"
        android:drawableLeft="@mipmap/forma3"
        android:drawablePadding="15dp"
        android:hint="请再输入一遍密码"
        android:password="true"
        android:singleLine="true"
        android:textColorHint="#a1b7c2"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/verication_code"
        android:layout_width="212dp"
        android:layout_height="46dp"
        android:layout_below="@+id/passwordconfirm"
        android:layout_alignStart="@+id/account"
        android:layout_marginStart="0dp"
        android:layout_marginTop="24dp"
        android:background="@mipmap/rectangle"
        android:drawableLeft="@mipmap/a"
        android:drawablePadding="15dp"
        android:hint="请输入验证码"
        android:singleLine="true"
        android:textColorHint="#a1b7c2"
        android:textSize="20sp" />

    <Button
        android:id="@+id/OK"
        android:layout_width="259dp"
        android:layout_height="46dp"
        android:layout_below="@+id/cancel"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:alpha="100"
        android:background="@mipmap/signupicon"
        android:text="注 册"
        android:textColor="#F8F8FF"
        android:textSize="22sp" />

    <Button
        android:id="@+id/cancel"
        android:layout_width="280dp"
        android:layout_height="18dp"
        android:layout_below="@+id/verication_code"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:alpha="100"
        android:background="@mipmap/signinnow"
        android:text="" />

    <com.example.login.CountdownButton
        android:id="@+id/getvericationcode"
        android:layout_width="108dp"
        android:layout_height="46dp"
        android:layout_alignBottom="@+id/verication_code"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="0dp"
        android:layout_toEndOf="@+id/verication_code"
        android:alpha="100"
        android:background="@mipmap/signupicon"
        android:text="获取验证码"
        android:textColor="#F8F8FF" />

    <TextView
        android:id="@+id/title"
        android:layout_width="198dp"
        android:layout_height="63dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@mipmap/title" />

</RelativeLayout>

